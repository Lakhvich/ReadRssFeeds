<div class="form-group">
    <label class="control-label col-md-2">Источник ленты </label>
    <div class="col-md-2">
        @Html.DropDownList("id", Model.resurseRSS as SelectList,
        htmlAttributes: new { @class = "form-control" })
    </div>
</div>
<div class="form-group">
    <div class="col-md-10">
        <div class="form-check">
            <label class="form-check-label">
                @Html.RadioButton("sort", "date", true)
                Сортировать по дате
            </label>

            <label class="form-check-label">
                @Html.RadioButton("sort", "resurse")
                Сортировать по источнику
            </label>
        </div>
    </div>
</div>
<div class="form-group">
    <div class="col-sm-10">
        <input type="submit" class="btn btn-default" value="Просмотреть" />
    </div>
</div>